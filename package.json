{
  "name": "color-dice",
  "version": "4.0.0",
  "description": "A small app to replace the lost colour die that came with a board game.",
  "main": "dice.js",
  "scripts": {
    "start": "serve",
    "build": "npm run build:css && npm run build:js",
    "build:css": "csso dice.css -o dice.min.css",
    "build:js": "minify dice.js -o dice.min.js --mangle",
    "watch": "watch -p dice.css -p dice.js -c \"npm run build\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinbate/color-dice.git"
  },
  "keywords": [
    "dice",
    "rolling",
    "die",
    "games"
  ],
  "author": "Colin Bate <colin@colinbate.com>",
  "license": "ISC",
  "now": {
    "type": "static",
    "name": "color-dice",
    "alias": "dice.cbate.com",
    "files": [
      "index.html",
      "icons",
      "manifest.json",
      "service-worker.js",
      "wood.jpg",
      "dice.min.css",
      "dice.min.js",
      "icon-dice.css",
      "long-press.min.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/colinbate/color-dice/issues"
  },
  "homepage": "https://github.com/colinbate/color-dice#readme",
  "devDependencies": {
    "babel-minify": "^0.4.3",
    "csso-cli": "^1.1.0",
    "watch-cli": "^0.2.3",
    "serve": "^9.6.0"
  }
}
